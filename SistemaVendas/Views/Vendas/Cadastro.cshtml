@model SistemaVendas.Context.Tb_Vendas
@{
    ViewBag.Title = "Cadastro de Vendas";
}

<h2>Cadastro de Vendas</h2>
@using (Html.BeginForm("CadastrarVenda", "Vendas", FormMethod.Post))
{
    <div class="container">
        <div class="form-group">
            <label>Data da Venda: @DateTime.Now.ToString("dd/MM/yyyy")</label>
        </div>
        <div class="form-group">
            <label>Valor da Venda (valor decimal separado por ponto)</label>
            @Html.ValidationMessageFor(x => x.ValorVenda, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.ValorVenda, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Emitido NF da Venda?</label>
            @Html.ValidationMessageFor(x => x.EmitidoNF, "", new { @class = "error" })
            @Html.CheckBoxFor(x => x.EmitidoNF, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Digite o Id da Empresa (Não consegui incluir um dropdown com as opções)</label>
            @Html.ValidationMessageFor(x => x.IdEmpresa, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.IdEmpresa, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Digite o Id do Usuário (Não consegui incluir um dropdown com as opções)</label>
            @Html.ValidationMessageFor(x => x.IdUsuarioCadastro, "", new { @class = "error" })
            @Html.TextBoxFor(x => x.IdUsuarioCadastro, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <button type="submit" class="btn btn-primary">Cadastrar!</button>
        </div>
    </div>
}